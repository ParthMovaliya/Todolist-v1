<%- include("header") %> 

    <div class="box" id="heading">
        <h1><%= title %></h1>
    </div>

    <div class="box">
        <% for(var i=0; i<tasks.length ;i++) { %>
            <div class="item">
            <input type="checkbox">
                <p><%= tasks[i] %></p>
            </div>
        <% } %>

        <form class="item" action="/" method="post">
            <!-- <label for="inp">Enter Task</label> -->
            <input type="text" name="inp" id="inp" placeholder="Add Task" autocomplete="off">
            <button type="submit" name="list" value=<%= title %>>+</button>
        </form>
    </div>

    <%- include("footer") %>